{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "strictPropertyInitialization": false, // Added in Typescript 2.7 TODO Decide in the future once we want to comply with lint and this flag being true
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
